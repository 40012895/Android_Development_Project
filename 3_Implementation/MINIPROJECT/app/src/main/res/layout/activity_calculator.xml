<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#989494"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1667"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#070606"
            android:gravity="bottom|right"
            android:textColor="#F6F3F3"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1667"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#070606"
            android:text="1"
            android:textColor="#F6F0F0"
            android:textSize="25dp" />


        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#070606"
            android:text="2"
            android:textColor="#F6F0F0"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#070606"
            android:text="3"
            android:textColor="#EDEBEB"
            android:textSize="25dp" />


        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="1050px"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#401947"
            android:text="+"
            android:textColor="#F8F4F4"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1667"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#070606"
            android:text="4"
            android:textColor="#FBF8F8"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#070606"
            android:text="5"
            android:textColor="#FBF7F7"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#070606"
            android:text="6"
            android:textColor="#F3F0F0"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonSub"
            android:layout_width="1050px"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#401947"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1667"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#070606"
            android:text="7"
            android:textColor="#FBF8F8"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#070606"
            android:text="8"
            android:textColor="#F6F0F0"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#070606"
            android:text="9"
            android:textColor="#F6F0F0"
            android:textSize="25dp" />


        <Button
            android:id="@+id/buttonMul"
            android:layout_width="1050px"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#401947"
            android:text="*"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1667"
        android:background="#000000"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttondot"
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_weight="0.25"
            android:background="#401947"
            android:text="."
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_weight="0.25"
            android:background="#401947"
            android:text="0"
            android:textColor="#E8E6E6"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonac"
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_weight="0.25"
            android:background="#401947"
            android:text="AC"
            android:textColor="#F3F3F3"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_weight="0.25"
            android:background="#401947"
            android:text="/"
            android:textColor="#DCCFCF"
            android:textSize="25sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1667"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#393403"
            android:text="="
            android:textColor="#FBFBF6"
            android:textSize="25sp" />

    </LinearLayout>

</LinearLayout>